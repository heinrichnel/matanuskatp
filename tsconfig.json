{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["react", "react-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "tests/pageTest": ["tests/utils/pageTest.ts"]
    },
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "composite": true
  },
  "include": [
    "src",
    "tests",
    "scripts",
    "functions",
    "public",
    "vite.config.ts",
    "index.ts",
    "index.js",
    "route-component-map.cjs",
    "sidebar-validator.cjs",
    "find-form-usage.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".netlify"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
