rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Base rules - require authentication for all operations by default
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to public collections
    match /public/{document=**} {
      allow read: if true;
    }
    
    // Trips collection
    match /trips/{tripId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Diesel collection
    match /diesel/{dieselId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Driver behavior events
    match /driverBehaviorEvents/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Audit logs (read-only except for system)
    match /auditLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Audit logs should be immutable
    }
    
    // Clients collection
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Workshop collections
    match /workshopInventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /tyres/{tyreId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /jobCards/{cardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /enhancedJobCards/{cardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Action items and CAR reports
    match /actionItems/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /carReports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Tyre stores
    match /tyreStores/{storeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
