{
  "name": "firebaseScanner",
  "displayName": "Firebase Scanner",
  "description": "VS Code extension to scan and validate Firebase usage across your frontend and backend source files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:firebaseScanner.validateBindings"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "firebaseScanner.validateBindings",
        "title": "Validate Firebase Bindings"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "firebaseIntegrationMap",
          "name": "Firebase Integration Map"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heinNell/APppp.git",
    "directory": "extensions/firebaseScanner"
  },
  "bugs": {
    "url": "https://github.com/heinNell/APppp/issues"
  },
  "homepage": "https://github.com/heinNell/APppp/tree/main/extensions/firebaseScanner",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
