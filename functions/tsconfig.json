{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",             // For Firebase Functions
    "lib": ["es2019"],
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,          // CRITICAL for node-fetch and modern imports
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
