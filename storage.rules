rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated access to storage
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to specific folders if needed
    match /public/{allPublicPaths=**} {
      allow read: if true;
    }
    
    // Attachment-specific rules
    match /attachments/{tripId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Tyre inspection photos
    match /tyres/{tyreId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
